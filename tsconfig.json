{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "es2020",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@layout/*": ["layout/*"],
      "@pages/*": ["pages/*"],
      "@store/*": ["store/*"],
      "@types/*": ["types/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src/**/*"]
}
